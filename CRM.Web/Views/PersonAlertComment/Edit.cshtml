@using CRM.Entity.Model.Customer
@model PersonAlertCommentDto
<form id="editPersonAlertComment" class="form-horizontal" role="form" asp-controller="PersonAlertComment" asp-action="Save">

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="PersonAlertId" />
    <input type="hidden" asp-for="RowVersion" />
    <input type="hidden" asp-for="PersonAlert.Id" />
    <input type="hidden" asp-for="PersonAlert.PersonId" />
    <input type="hidden" asp-for="PersonAlert.RowVersion" />
    <p>
        <span class="text-danger">@Model.ErrorMessage</span>
        <span>@Html.ValidationSummary(true)</span>
    </p>
    <div class="form-group m-b">
        <label asp-for="PersonAlert.Details" class="col-md-3 control-label"></label>
        <div class="col-sm-9">
            <textarea asp-for="PersonAlert.Details" class="form-control" disabled="disabled"></textarea>
            <input type="hidden" asp-for="PersonAlert.Details" />
        </div>
    </div>
   
        <div class="form-group m-b">
            <label asp-for="PersonAlert.AlertStatusId" class="col-md-3 control-label"></label>
        @if (Model.Id == 0)
        {
            <div class="col-sm-9">
                <select asp-for="PersonAlert.AlertStatusId" asp-items="@Model.PersonAlert.AlertStatusSelectList" class="form-control dropdown"></select>
                <span asp-validation-for="PersonAlert.AlertStatusId" class="text-danger"></span>
            </div>
        }
        else
        {
            <div class="col-sm-9">
                <input asp-for="PersonAlert.AlertStatus.Name" class="form-control" />
                <input type="hidden" asp-for="PersonAlert.AlertStatusId" />
            </div>
        }
        </div>  
   
    <div class="form-group m-b">
        <label asp-for="Notes" class="col-md-3 control-label"></label>
        <div class="col-sm-9">
            <textarea asp-for="Notes" class="form-control"></textarea>
        </div>
    </div>
</form>
<script type="text/javascript">
    $(function () {
        $("#editPersonAlertComment").submit(function (event) {
            submitModalForm($(this), event);
        });
    });
</script>
