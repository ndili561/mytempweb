@using CRM.Entity.Model
@using CRM.Entity.Search.Lookup
@model AntiSocialBehaviourTypeSearchModel
@{
    ViewData["Title"] = "Anti Social Behaviour Type List";
}
<form asp-action="Grid" method="get">
    <div class="row">
        <div class="panel">
            <div class="panel-body">
                <div class="row">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <div id="filterDiv" class="row">
                                <div class="col-md-12">
                                    <search />
                                </div>
                            </div>
                        </div>
                        <div id="@Model.TargetGridId" class="grid">
                            @Html.Partial("Grid", Model)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@Html.Partial("ModalDialog", new ModalDialogViewModel { ParentDivId = "divAntiSocialBehaviourTypeParent" })

@section Scripts {
<script type="text/javascript">
    function displayAddAntiSocialBehaviourType() {
        var url = "/AntiSocialBehaviourType/Create" ;
        showDialog("divAntiSocialBehaviourTypeParent", "frmAntiSocialBehaviourType", url, "Create Anti Social Behaviour Type");
    }
    function displayEditAntiSocialBehaviourType(addressTypeId) {
        var url = "/AntiSocialBehaviourType/Edit?id=" + addressTypeId;
        showDialog("divAntiSocialBehaviourTypeParent", "frmAntiSocialBehaviourType", url, "Edit Anti Social Behaviour Type");
    }
</script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

