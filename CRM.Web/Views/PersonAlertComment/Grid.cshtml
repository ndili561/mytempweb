@using CRM.Entity.Search.Customer
@model PersonAlertCommentSearchModel
@{
    ViewData["Title"] = "Person Alert Comments";
}
<input type="hidden" asp-for="TargetGridId" />
<input type="hidden" asp-for="PersonAlertId" />
<div class="ibox-content">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th><sort display-name="Id" column-name="Id" /></th>
                <th><sort display-name="Notes" column-name="Notes" /></th>
                <th><sort display-name="Created Date" column-name="CreatedDate" /></th>
                <th><sort display-name="Created By" column-name="CreatedBy" /></th>
                <th class="text-right"> <button type="button" id="btnAddPersonAlert" onclick="displayAddPersonAlertComment(@Model.PersonAlertId)" class="btn btn-success fa fa-plus">Add</button></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PersonAlertCommentSearchResult)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Notes)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedBy)
                    </td>
                    <td class="text-right">
                        @*<button type="button" id="btnEditPersonAlertComment_@item.Id" onclick="displayEditPersonAlertComment('@item.Id')" class="btn btn-warning fa fa-edit">Edit</button>*@
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td class="tc" colspan="12">
                    <pageing />
                </td>
            </tr>
        </tfoot>
    </table>
</div>