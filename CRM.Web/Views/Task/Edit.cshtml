@model CRM.Entity.Model.Employee.TaskDto
<form id="editTask" class="form-horizontal" role="form" asp-controller="Task" asp-action="Save" data-ajax="true" data-ajax-complete="handleTaskUpdate" data-ajax-success="handleTaskUpdate" data-ajax-method="POST">
    
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.RowVersion)
    <p>
        <span class="text-danger">@Model.ErrorMessage</span>
        <span>@Html.ValidationSummary(true)</span>
    </p>
    <div class="ibox-content">
        <div class="form-group">
            <label asp-for="Name" class="col-md-3 control-label"></label>
            <div class="col-sm-9">
                <input asp-for="Name" class="form-control m-b" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TaskCss" class="col-md-3 control-label"></label>
            <div class="col-sm-9">
                <input asp-for="TaskCss" class="form-control m-b" />
                <span asp-validation-for="TaskCss" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TaskStyle" class="col-md-3 control-label"></label>
            <div class="col-sm-9">
                <input asp-for="TaskStyle" class="form-control m-b" />
                <span asp-validation-for="TaskStyle" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TaskDuration" class="col-md-3 control-label"></label>
            <div class="col-sm-9">
                <select asp-for="TaskDuration" asp-items="Html.GetEnumSelectList<CRM.Entity.Enum.TaskDuration>()" class="form-control dropdown m-b"></select>
                <span asp-validation-for="TaskDuration" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Comment" class="col-md-3 control-label"></label>
            <div class="col-sm-9">
                <input asp-for="Comment" class="form-control m-b" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="IsActive" class="col-md-3 control-label"></label>
            <div class="col-sm-9">
                <input  asp-for="IsActive" class="form-control m-b" />
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
        </div>
    </div>
</form>
<script type="text/javascript">
    $(function () {
        $("#editTask").submit(function (event) {
            submitModalForm($(this), event);
        });
    });
</script>
