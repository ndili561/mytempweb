@using CRM.Entity.Model
@using CRM.Entity.Search.Lookup
@model FlagTypeSearchModel
@{
    ViewData["Title"] = "Flag Type List";
}
<form asp-action="Grid" method="get">
    <div class="row">
        <div class="panel">
            <div class="panel-body">
                <div class="row">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <div id="filterDiv" class="row">
                                <div class="col-md-12">
                                    <search />
                                </div>
                            </div>
                        </div>
                        <div id="@Model.TargetGridId" class="grid">
                            @Html.Partial("Grid", Model)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@Html.Partial("ModalDialog", new ModalDialogViewModel { ParentDivId = "divFlagTypeParent" })

@section Scripts {
<script type="text/javascript">
    function displayAddFlagType() {
        var url = "/FlagType/Create";
        showDialog("divFlagTypeParent", "frmFlagType", url, "Create Flag Type");
    }
    function displayEditFlagType(alertTypeId) {
        var url = "/FlagType/Edit?id=" + alertTypeId;
        showDialog("divFlagTypeParent", "frmFlagType", url, "Edit Flag Type");
    }
</script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

