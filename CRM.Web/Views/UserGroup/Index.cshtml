@using CRM.Entity.Model
@using CRM.Entity.Search.Employee
@model UserGroupSearchModel
@{
    ViewData["Title"] = "User Group List";
}
<form asp-action="Grid" method="get">
    <div class="row">
        <div class="panel">
            <div class="panel-body">
                <div class="row">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <div id="filterDiv" class="row">
                                <div class="col-md-12">
                                    <search />
                                </div>
                            </div>
                        </div>
                        <div id="@Model.TargetGridId" class="grid">
                            @Html.Partial("Grid", Model)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@Html.Partial("ModalDialog", new ModalDialogViewModel { ParentDivId = "divUserGroupParent" })

@section Scripts {
    <script type="text/javascript">
        function displayAddUserGroup() {
            var url = "/UserGroup/Add";
            showDialog("divUserGroupParent", "frmUserGroup", url, "Add User Group");
        }
        function displayEditUserGroup(id) {
            var url = "/UserGroup/Edit?id=" + id;
            showDialog("divUserGroupParent", "frmUserGroup", url, "Edit User Group");
        }
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

