@model CRM.Entity.Search.Employee.UserSearchModel
@{
    ViewData["User"] = "User";
}
<input type="hidden" asp-for="TargetGridId" />
<div class="ibox-content">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th><sort display-name="Name" column-name="Name" /></th>
                <th><sort display-name="Email" column-name="Email" /></th>
                <th>Telephone</th>
                <th>Manager</th>
                <th>Group</th>
                <th>Is Active</th>
                <th >Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.UserSearchResult)
            {
            <tr>

                <td>
                    <a href="~/User/Details?userId=@item.Id">@item.Name</a>
                </td>
                <td>
                    <a href="~/User/Details?userId=@item.Id">@item.Email</a>
                </td>
                <td>
                    <a href="~/User/Details?userId=@item.Id">@item.Telephone</a>
                </td>
                <td>
                    <a href="~/User/Details?userId=@item.Id">@item.Manager?.Name</a>
                </td>
                <td>
                    <a href="~/User/Details?userId=@item.Id">@item.UserGroup?.Name</a>
                </td>
                <td>
                    <a href="~/User/Details?userId=@item.Id">@item.IsActive</a>
                </td>
                <td>
                    <a class="btn btn-primary" href="~/User/Details?userId=@item.Id">Manage</a>
                </td>
            </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td class="tc" colspan="12">
                    <pageing />
                </td>
            </tr>
        </tfoot>
    </table>
</div>