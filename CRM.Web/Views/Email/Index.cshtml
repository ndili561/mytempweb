@using CRM.Entity.Model
@using CRM.Entity.Search.Common
@model EmailSearchModel
@{
    ViewData["Title"] = "Emails";
}
<form asp-action="Grid" method="get">
    <div class="row">
        <div class="panel">
            <div class="panel-body">
                <div class="row">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <div id="filterDiv" class="row">
                                <div class="col-md-12">
                                    <search />
                                </div>
                            </div>
                        </div>
                        <div id="@Model.TargetGridId" class="grid">
                            @Html.Partial("Grid", Model)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@Html.Partial("ModalDialog", new ModalDialogViewModel { ParentDivId = "divEmailParent" })

@section Scripts {
    <script type="text/javascript">
        function displayEditEmail(id) {
            var url = "/Email/Edit?id=" + id;
            showDialog("divEmailParent", "frmEmail", url, "Edit Address Type");
        }
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

