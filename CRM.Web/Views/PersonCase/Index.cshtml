@using CRM.Entity.Model
@model CRM.Entity.Search.Customer.PersonCaseSearchModel
@{
    ViewData["Title"] = "Person Cases";
}
<form asp-action="Grid" method="get">
    <div class="row">
        <div class="panel">
            <div class="panel-body">
                <div class="row">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <div id="filterDiv" class="row">
                                <div class="col-md-12">
                                    <search />
                                </div>
                            </div>
                        </div>
                        <div id="@Model.TargetGridId" class="grid">
                            @Html.Partial("Grid", Model)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@Html.Partial("ModalDialog", new ModalDialogViewModel { ParentDivId = "divPersonCaseParent" })

@section Scripts {
    <script type="text/javascript">
        function displayEditPersonCase(alertGroupId) {
            var url = "/PersonCase/Edit?id=" + alertGroupId;
            showDialog("divPersonCaseParent", "frmPersonCase", url, "Edit Case");
        }
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

