@using CRM.Entity.Model.Customer
@model PersonFlagCommentDto
<form id="editPersonFlagComment" class="form-horizontal" role="form" asp-controller="PersonFlagComment" asp-action="Save" data-ajax="true" data-ajax-complete="handleAddressTypeUpdate" data-ajax-success="handleAddressTypeUpdate" data-ajax-method="POST">
    
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.PersonFlagId)
    @Html.HiddenFor(model => model.RowVersion)
    <p>
        <span class="text-danger">@Model.ErrorMessage</span>
        <span>@Html.ValidationSummary(true)</span>
    </p>
    <div class="form-group m-b">
        <label asp-for="Notes" class="col-md-3 control-label"></label>
        <div class="col-sm-9">
            <textarea asp-for="Notes" class="form-control"></textarea>
        </div>
    </div>
</form>
<script type="text/javascript">
    $(function () {
        $("#editPersonFlagComment").submit(function (event) {
            submitModalForm($(this), event);
        });
    });
</script>
