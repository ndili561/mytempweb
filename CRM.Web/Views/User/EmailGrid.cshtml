@using CRM.Entity.Search.Common
@model EmailSearchModel
@{
    ViewData["Title"] = "Emails";
}
<div class="ibox-content">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th><sort display-name="Subject" column-name="Subject" /></th>
                <th><sort display-name="CreatedOn" column-name="Created On" /></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.EmailSearchResult)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ToEmailAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject)
                </td>
            </tr>
        }
        </tbody>
        <tfoot>
        <tr>
            <td class="tc" colspan="12">
                <pageing/>
            </td>
        </tr>
        </tfoot>
    </table>
</div>
