@using CRM.Entity.Search.Customer
@model TenantSearchModel
@{
    ViewData["Title"] = "Tenants";
}
<input type="hidden" asp-for="TargetGridId" />
<div class="ibox-content">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th><sort display-name="Forename" column-name="Person/Forename" /></th>
                <th><sort display-name="Surname" column-name="Person/Surname" /></th>
                <th><sort display-name="Tenant Code" column-name="TenantCode" /></th>
                <th><sort display-name="Tenancy Reference" column-name="TenancyReference" /></th>
                <th><sort display-name="Tenancy Type" column-name="TenancyType" /></th>
                <th class="text-right"> <button type="button" id="btnAddTenant" onclick="displayAddTenant()" class="btn btn-success btn-labeled fa fa-plus">Add</button></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.TenantSearchResult)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Person.Forename)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Person.Surname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenantCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenancyReference)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenancyType)
                    </td>
                    <td class="text-right">
                       
                        <button type="button" id="btnEditPerson_@item.Id" onclick="displayEditTenant('@item.Id')" class="btn btn-warning btn-labeled fa fa-edit">Edit</button>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td class="tc" colspan="12">
                    <pageing />
                </td>
            </tr>
        </tfoot>
    </table>
</div>