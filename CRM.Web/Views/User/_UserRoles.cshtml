@using CRM.Entity.Model.Employee
@model UserDto
<form id="frmUserApplicationRole" class="wizard-big">
    
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.RowVersion)
    <div class="form-group ">
        <label asp-for="LinkedApplicationIds" class="col-md-3 control-label"></label>
        <div class="col-sm-9">
            <select asp-for="LinkedApplicationIds" asp-items="@Model.ApplicationSelectList" onchange="linkedApplicationValueChange()" class="form-control dropdown" ></select>
            <span asp-validation-for="LinkedApplicationIds" class="text-danger"></span>
        </div>
    </div>
    <div class="clearfix"></div>
    <div id="divApplicationRole" class="form-group ">
        <select asp-for="LinkedUserApplicationRoleIds" asp-items="@Model.RoleSelectList" class="form-control dual_select" multiple="multiple" name="LinkedUserApplicationRoleIds"></select>
    </div>
</form>
<div class="ibox m-t">
    <div class="pull-left m-l">
        <button type="button" onclick="updateUserApplicationRoles();" class="btn btn-primary pull-left m-l">Update roles</button>
    </div>
    <div class="pull-right m-r">
        <button type="button" onclick="$('#divUserCalendar').click();" class="btn btn-warning">Calendar</button>
    </div>
</div>