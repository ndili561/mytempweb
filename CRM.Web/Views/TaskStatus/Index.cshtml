@using CRM.Entity.Model
@using CRM.Entity.Search.Lookup
@model TaskStatusSearchModel
@{
    ViewData["Title"] = "Task Status List";
}
<form asp-action="Grid" method="get">
    <div class="row">
        <div class="panel">
            <div class="panel-body">
                <div class="row">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <div id="filterDiv" class="row">
                                <div class="col-md-12">
                                    <search />
                                </div>
                            </div>
                        </div>
                        <div id="@Model.TargetGridId" class="grid">
                            @Html.Partial("Grid", Model)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@Html.Partial("ModalDialog", new ModalDialogViewModel { ParentDivId = "divTaskStatusParent" })

@section Scripts {
    <script type="text/javascript">
        function displayEditTaskStatus(id) {
            var url = "/TaskStatus/Edit?id=" + id;
            showDialog("divTaskStatusParent", "frmTaskStatus", url, "Edit Task Status");
        }
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

