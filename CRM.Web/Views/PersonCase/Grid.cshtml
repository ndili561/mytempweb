@using CRM.Entity.Search.Customer
@model PersonCaseSearchModel
@{
    ViewData["Title"] = "Person Cases";
}
<input type="hidden" asp-for="TargetGridId" />
<div class="ibox-content">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th><sort display-name="Forename" column-name="Person/Forename" /></th>
                <th><sort display-name="Surname" column-name="Person/Surname" /></th>
                <th><sort display-name="Details" column-name="Details" /></th>
                <th><sort display-name="Raised On" column-name="RaisedOn" /></th>
                <th class="text-right"> <button type="button" id="btnAddPersonCase" onclick="displayAddPersonCase()" class="btn btn-success btn-labeled fa fa-plus">Add</button></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PersonCaseSearchResult)
            {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Person.Forename)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Person.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Details)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RaisedOnString)
                </td>
                <td class="text-right">

                    <button type="button" id="btnEditPerson_@item.Id" onclick="displayEditPersonCase('@item.Id')" class="btn btn-warning btn-labeled fa fa-edit">Edit</button>
                </td>
            </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td class="tc" colspan="12">
                    <pageing />
                </td>
            </tr>
        </tfoot>
    </table>
</div>