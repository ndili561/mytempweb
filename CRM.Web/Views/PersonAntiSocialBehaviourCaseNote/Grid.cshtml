@using CRM.Entity.Search.Customer
@model PersonAntiSocialBehaviourCaseNoteSearchModel
@{
    ViewData["Title"] = "Case Notes";
}
<input type="hidden" asp-for="TargetGridId" />
<div class="ibox-content">
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th><sort display-name="Case Id" column-name="PersonAntiSocialBehaviour/Id" /></th>
            <th><sort display-name="Case Status" column-name="CaseStatus/Name"/></th>
            <th><sort display-name="Case Type" column-name="CaseType/Name"/></th>
            <th><sort display-name="Note" column-name="Note"/></th>
            <th class="text-right"> <button type="button" id="btnAddPersonAntiSocialBehaviour" onclick="displayAddPersonAntiSocialBehaviour()" class="btn btn-success btn-labeled fa fa-plus">Add</button></th>
        </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PersonAntiSocialBehaviourCaseNoteSearchResult)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PersonAntiSocialBehaviour.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PersonAntiSocialBehaviour.CaseStatus.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PersonAntiSocialBehaviour.CaseType.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Note)
                </td>
                <td class="text-right">
                    <button type="button" id="btnEditPerson_@item.Id" onclick="displayEditPersonAntiSocialBehaviourCaseNote('@item.Id')" class="btn btn-warning btn-labeled fa fa-edit">Edit</button>
                </td>
            </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td class="tc" colspan="12">
                    <pageing />
                </td>
            </tr>
        </tfoot>
    </table>
</div>