@model CRM.Entity.Model.Common.EmailDto
@{
    ViewData["Title"] = "EmailView";
}

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-3">
            @Html.Partial("_Category", Model)
        </div>
        <div class="col-lg-9 animated fadeInRight">
            <div class="mail-box-header">
                <div class="pull-right tooltip-demo">
                    <a href="@Url.Action("ComposeEmail", "Email")" class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Reply"><i class="fa fa-reply"></i> Reply</a>
                    <a onclick="printEmail()" class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Print email"><i class="fa fa-print"></i> </a>
                    <a href="@Url.Action("Inbox", "Email")" class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Move to trash"><i class="fa fa-trash-o"></i> </a>
                </div>
                <h2>
                    View Message
                </h2>
                <div class="mail-tools tooltip-demo m-t-md">
                    <h3>
                        <span class="font-normal">Subject: </span>@Model.Subject
                    </h3>
                    <h5>
                        <span class="pull-right font-normal">@Model.SendOn</span>
                        <span class="font-normal">From: </span>@Model.User?.Email
                    </h5>
                </div>
            </div>
            <div class="mail-box">
                <div class="mail-body">
                    @Model.Body
                </div>
                @Html.Partial("_Attachment",Model)
                <div class="mail-body text-right tooltip-demo">
                    <a class="btn btn-sm btn-white" href="@Url.Action("ComposeEmail", "Email")"><i class="fa fa-reply"></i> Reply</a>
                    <a class="btn btn-sm btn-white" href="@Url.Action("ComposeEmail", "Email")"><i class="fa fa-arrow-right"></i> Forward</a>
                    <button onclick="printEmail()" title="" data-placement="top" data-toggle="tooltip" type="button" data-original-title="Print" class="btn btn-sm btn-white"><i class="fa fa-print"></i> Print</button>
                    <button onclick="sendEmailToTrash()" title="" data-placement="top" data-toggle="tooltip" data-original-title="Trash" class="btn btn-sm btn-white"><i class="fa fa-trash-o"></i> Remove</button>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>

