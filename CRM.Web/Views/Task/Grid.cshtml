@using CRM.Entity.Search.Employee
@model TaskSearchModel
@{
    ViewData["Title"] = "Task";
}
<input type="hidden" asp-for="TargetGridId" />
<div class="ibox-content">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th><sort display-name="Name" column-name="Name" /></th>
                <th><sort display-name="TaskDuration" column-name="TaskDuration" /></th>
                <th><sort display-name="TaskCss" column-name="TaskCss" /></th>
                <th><sort display-name="TaskStyle" column-name="TaskStyle" /></th>
                <th><sort display-name="Comment" column-name="Comment" /></th>
                <th><sort display-name="IsActive" column-name="IsActive" /></th>
                <th class="text-right"> <button type="button" id="btnAddTask" onclick="displayAddTask()" class="btn btn-success btn-labeled fa fa-plus">Add</button></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.TaskSearchResult)
            {
                <tr>

                    <td>
                        <a href="~/Task/Details?taskId=@item.Id">@item.Name</a>
                    </td>
                    <td>
                        <a href="~/Task/Details?taskId=@item.Id">@Html.DisplayFor(modelItem => item.TaskDuration)</a>
                    </td>
                    <td>
                        <a href="~/Task/Details?taskId=@item.Id">@Html.DisplayFor(modelItem => item.TaskCss)</a>
                    </td>
                    <td>
                        <a href="~/Task/Details?taskId=@item.Id"> @Html.DisplayFor(modelItem => item.TaskStyle)</a>
                    </td>
                    <td>
                        <a href="~/Task/Details?taskId=@item.Id"> @Html.DisplayFor(modelItem => item.Comment)</a>
                    </td>
                    <td>
                        <a href="~/Task/Details?taskId=@item.Id">@Html.DisplayFor(modelItem => item.IsActive)</a>
                    </td>
                    <td class="text-right">

                        <button type="button" id="btnEditTask_@item.Id" onclick="displayEditTask('@item.Id')" class="btn btn-warning btn-labeled fa fa-edit">Edit</button>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td class="tc" colspan="12">
                    <pageing />
                </td>
            </tr>
        </tfoot>
    </table>
</div>