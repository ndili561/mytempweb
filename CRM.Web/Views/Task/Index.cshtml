@using CRM.Entity.Model
@model CRM.Entity.Search.Employee.TaskSearchModel
@{
    ViewData["Title"] = "Task List";
}
<form asp-action="Grid" method="get">
    <div class="row">
        <div class="panel">
            <div class="panel-body">
                <div class="row">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <div id="filterDiv" class="row">
                                <div class="col-md-12">
                                    <search />
                                </div>
                            </div>
                        </div>
                        <div id="@Model.TargetGridId" class="grid">
                            @Html.Partial("Grid", Model)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@Html.Partial("ModalDialog", new ModalDialogViewModel { ParentDivId = "divTaskParent" })

@section Scripts {
<script type="text/javascript">
    function displayAddTask() {
        var url = "/Task/Add";
        showDialog("divTaskParent", "frmTask", url, "Add Task");
    }
    function displayEditTask(id) {
        var url = "/Task/Edit?id=" + id;
        showDialog("divTaskParent", "frmTask", url, "Edit Task");
    }
</script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

