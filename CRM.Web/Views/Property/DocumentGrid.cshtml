@using CRM.Entity.Search.Common
@model PropertyDocumentSearchModel
@{
    ViewData["Title"] = "Documents";
}
<div class="ibox-content">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th><sort display-name="Name" column-name="Name" /></th>
                <th><sort display-name="Document Type" column-name="DocumentType" /></th>
                <th><sort display-name="Comment" column-name="Comment" /></th>
                <th class="text-right">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PropertyDocumentSearchResult)
            {
                <tr>
                    <td>
                        <a href="/Property/Download?id=@item.Id" title="Please click to download">@item.Document.Name</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DocumentTypeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comment)
                    </td>
                    <td class="text-right">
                        <button type="button" onclick="loadPdf(@item.Id)" class="btn btn-primary fa fa-file-pdf-o">View PDF</button>
                        <button type="button" onclick="confirmDeleteFile(@item.Id)" class="btn btn-danger fa fa-remove">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td class="tc" colspan="12">
                    <pageing />
                </td>
            </tr>
        </tfoot>
    </table>
</div>

