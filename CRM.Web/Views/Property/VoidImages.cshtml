@using CRM.Entity.Model.Common
@model PropertyDetailViewDto
<div class="row">
    <div style="padding: 9px;">
        @if (Model != null && Model.Images.Any())
        {
            <div class="col-md-12">
                <div class="panel">

                    <!--Carousel-->
                    <!--===================================================-->
                    <div id="demo-carousel" class="carousel slide" data-ride="carousel">

                        <!--Indicators-->
                        <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
                        <ol class="carousel-indicators dark out">
                            <li class="active" data-slide-to="0" data-target="#demo-carousel"></li>
                            <li data-slide-to="1" data-target="#demo-carousel" class=""></li>
                            <li class="" data-slide-to="2" data-target="#demo-carousel"></li>
                        </ol>
                        <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->

                        <div class="carousel-inner text-center">

                            @foreach (var image in Model.Images)
                            {
                                if (image != null)
                                {
                                    var imageBase64 = Convert.ToBase64String(image);
                                    var imageSrc = string.Format("data:image/jpg;base64,{0}", imageBase64);
                                    if (image == Model.Images[0])
                                    {
                                        <div class="item active">
                                            <img src="@imageSrc" />
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="item">
                                            <img src="@imageSrc" />
                                        </div>
                                    }
                                }
                            }

                        </div>

                        <!--carousel-control-->
                        <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
                        <a class="carousel-control left" data-slide="prev" href="#demo-carousel">
                            <i class="fa fa-chevron-left fa-2x"></i>
                        </a>
                        <a class="carousel-control right" data-slide="next" href="#demo-carousel">
                            <i class="fa fa-chevron-right fa-2x"></i>
                        </a>
                        <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->

                    </div>
                    <!--===================================================-->
                    <!--End Carousel-->


                </div>
            </div>
        }
    </div>

</div>
