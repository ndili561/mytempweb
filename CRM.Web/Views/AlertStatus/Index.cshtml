@using CRM.Entity.Model
@using CRM.Entity.Search.Lookup
@model AlertStatusSearchModel
@{
    ViewData["Title"] = "Alert Type List";
}
<form asp-action="Grid" method="get">
    <div class="row">
        <div class="panel">
            <div class="panel-body">
                <div class="row">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <div id="filterDiv" class="row">
                                <div class="col-md-12">
                                    <search />
                                </div>
                            </div>
                        </div>
                        <div id="@Model.TargetGridId" class="grid">
                            @Html.Partial("Grid", Model)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@Html.Partial("ModalDialog", new ModalDialogViewModel { ParentDivId = "divAlertStatusParent" })

@section Scripts {
<script type="text/javascript">
    function displayAddAlertStatus() {
        var url = "/AlertStatus/Create";
        showDialog("divAlertTypeParent", "frmAlertStatus", url, "Edit Alert Status");
    }
    function displayEditAlertType(id) {
        var url = "/AlertStatus/Edit?id=" + id;
        showDialog("divAlertStatusParent", "frmAlertStatus", url, "Edit Alert Status");
    }
</script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

