@model CRM.Entity.Search.Common.DocumentSearchModel
@{
    ViewData["Title"] = "Persons";
}
<input type="hidden" asp-for="TargetGridId" />
<div class="ibox-content">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th><sort display-name="Name" column-name="Name" /></th>
                <th><sort display-name="Comment" column-name="Comment" /></th>
                <th><sort display-name="IsActive" column-name="IsActive" /></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.DocumentSearchResult)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comment)
                    </td>
                    <td class="text-right">
                        <button type="button" id="btnEditPerson_@item.Id" onclick="displayEditDocument('@item.Id')" class="btn btn-warning btn-labeled fa fa-edit">Edit</button>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td class="tc" colspan="12">
                    <pageing />
                </td>
            </tr>
        </tfoot>
    </table>
</div>