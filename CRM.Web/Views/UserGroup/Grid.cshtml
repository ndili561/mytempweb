@model CRM.Entity.Search.Employee.UserGroupSearchModel
@{
    ViewData["UserGroup"] = "UserGroup";
}
<input type="hidden" asp-for="TargetGridId" />
<div class="ibox-content">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th><sort display-name="Name" column-name="Name" /></th>
                <th><sort display-name="IsActive" column-name="IsActive" /></th>
                <th>Group Email Address</th>
                <th class="text-right"> <button type="button" id="btnAddUserGroup" onclick="displayAddUserGroup()" class="btn btn-success btn-labeled fa fa-plus">Add</button></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.UserGroupSearchResult)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmailAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>
                    <td class="text-right">
                       
                        <button type="button" id="btnEditUserGroup_@item.Id" onclick="displayEditUserGroup('@item.Id')" class="btn btn-warning btn-labeled fa fa-edit">Edit</button>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td class="tc" colspan="12">
                    <pageing />
                </td>
            </tr>
        </tfoot>
    </table>
</div>